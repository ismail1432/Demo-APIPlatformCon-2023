{% extends 'base.html.twig' %}

{% block title %}Hello UtilisateurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Utilisateurs !</h1>

    <ul>
        <hr>
        {% for utilisateur in utilisateurs %}
            <li>Nom : {{ utilisateur.nom  }} </li>
            <li>Prenom : {{ utilisateur.prenom}} </li>
            <li>Adresse : {{ utilisateur.adresse.rue}} </li>
            <li>Ville : {{ utilisateur.adresse.ville }} </li>
            <li>Code Postal : {{ utilisateur.adresse.codePostal}} </li>
            <a href="{{ path('detail_utilisateur', {id: utilisateur.id} ) }}">Detail</a>
        <hr>
        {% endfor %}
        <ul>
</div>
{% endblock %}
